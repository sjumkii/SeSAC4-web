<html>
    <head>
        <title>회원가입</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

        <script>
            function signUp() {
                var form = document.getElementById("form_signup");
                axios({
                    method: 'post',
                    url: 'http://localhost:8000/sign/signup',
                    data: {
                        id: form.id.value,
                        pw: form.pw.value,
                        name: form.name.value,
                        num: form.num.value,
                        email: form.email.value
                    }
                })
                .then((rep) => { return rep.data; })
                .then((data) => {
                    alert("회원가입 성공");

                    let html = 
                    "<tr id='tr_" + data.id + "'><td>" + data.id + "</td><td>" + form.pw.value + "</td><td>" + form.name.value + "</td><td>" + form.num.value + "</td><td>" + form.email.value + "</td>" + "<td><button type='button' onclick='editinfo(" + data.id + ");'>수정</button></td><td><button type='button' onclick='deleteinfo(" + data.id + ");'>삭제</button></td></tr>"; 

                    $( "table" ).append(html);
                })
            }

            function editinfo( id ){
                axios({
                    method: 'get',
                    url: 'http://localhost:8000/sign/get?id=' + id
                })
                .then((rep) => { return rep.data })
                .then((data) => {
                    console.log( data.result );

                    var form = document.getElementById("form_signup");
                    form.id.value = data.result.id;
                    form.pw.value = data.result.pw;
                    form.name.value = data.result.name;
                    form.num.value = data.result.num;
                    form.email.value = data.result.email;

                    var html = "<button type = 'button' onclick='editDo(" + id + ");'>수정</button>" + "<button type = 'button' onclick='editCancel();'>취소</button>";;

                    document.getElementById("button-signup").innerHTML=html;
                })
            }

            function editCancel() {
                var form = document.getElementById("form_signup");
                form.reset();

                var heml = "<button type='button' onclick='signup();'>등록</button>";
                document.getElementById("button-signup").innerHTML = html;
            }

            function editDo( id ){
                var form = document.getElementById("form_signup");
                axios({
                    method: 'patch',
                    url: "http://localhost:8000/sign/edit",
                    data: {
                        id: id,
                        pw:  form.pw.value,
                        name: form.name.value,
                        num: form.num.value,
                        email: form.email.value
                    }
                }).then((rep) => { return rep.data })
                .then((data) => {
                    alert( data );
                    
                    var tr = document.getElementById("tr_" + id);
                    console.log(tr);
                    var children = tr.children;
                    
                    $( children[1] ).text( form.pw.value );
                    $( children[2] ).text( form.name.value );
                    $( children[3] ).text( form.num.value );
                    $( children[4] ).text( form.email.value );
                    console.log( children );
                })
            }

            function deleteinfo( id ) {
                axios({
                    method: 'delete',
                    url: "http://localhost:8000/sign/delete",
                    data: { id : id }
                }).then((rep) => { return rep.data; })
                .then((data) => { 
                    alert( data ); 
                    var tr = document.getElementById("tr_" + id);
                    $( tr ).remove();
                });
            }
        </script>
    </head>

    <body>
        <form id="form_signup">
            <fieldset style="width: 500;">
                <legend> 회원가입 </legend>
                <div>아이디: <input type="text" name="id"></div>
                <div>비밀번호: <input type="password" name="pw"></div>
                <div>이름: <input type="text" name="name"></div>
                <div>휴대전화: <input type="text" name="num"></div>
                <div>이메일: <input type="text" name="email"></div>
                <br>
                <div id="button-signup">
                    <button type="button" value="회원가입" onclick="signUp();">회원가입</button>    
                </div>
            </fieldset>    
        </form>

        <table border="1" id="Visitor_list" style="text-align: center;">
            <colgroup>
                <col style="width: 200px">           
                <col style="width: 200px">            
                <col style="width: 200px">           
                <col style="width: 200px">
                <col style="width: 200px">
                <col style="width: 100px">	
                <col style="width: 100px">		
            </colgroup>
            <tbody>
                <tr>
                    <th>ID</th>
                    <th>PW</th>
                    <th>이름</th>
                    <th>전화번호</th>
                    <th>이메일</th>
                    <th>수정</th>
                    <th>탈퇴</th>
                </tr>
                <% 
                    for ( let i = 0; i < data.length; i++ ){
                %>
                <tr id="tr_<%=data[i].id%>">
                    <td><%=data[i].id%></td>
                    <td><%=data[i].pw%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].num%></td>
                    <td><%=data[i].email%></td>
                    <td><button type="button" onclick="editinfo( '<%=data[i].id%>' );">수정</button></td>
                    <td><button type="button" onclick="deleteinfo( '<%=data[i].id%>' );">탈퇴</button></td>
                </tr>
                <%
                    }
                %>               
            </tbody>
        </table>
    </body>
</html>