<html>
    <head>
        <title>회원가입</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

        <script>
            function signUp() {
                var form = document.getElementById("form_signup");
                axios({
                    method: 'post',
                    url: 'http://localhost:8000/sign/signup',
                    data: {
                        id: form.id.value,
                        pw: form.pw.value,
                        name: form.name.value,
                        num: form.num.value,
                        email: form.email.value
                    }
                })
                .then((rep) => { return rep.data; })
                .then((data) => {
                    alert("회원가입 성공");
                })
            }
        </script>
    </head>

    <body>
        <form id="form_signup">
            <fieldset style="width: 500;">
                <legend> 회원가입 </legend>
                <div>아이디: <input type="text" name="id"></div>
                <div>비밀번호: <input type="password" name="pw"></div>
                <div>이름: <input type="text" name="name"></div>
                <div>휴대전화: <input type="text" name="num"></div>
                <div>이메일: <input type="text" name="email"></div>
                <br>
                <div id="button-signup">
                    <button type="button" value="회원가입" onclick="signUp();">회원가입</button>
                </div>
                <div id="button-signup">
                    <a href="/sign/login"><button type="button" value="로그인">로그인</button></a>    
                </div>
            </fieldset>    
        </form>
    </body>
</html>