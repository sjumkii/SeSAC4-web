<html>
    <head>
        <title>axios_prc</title>

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <script>
            function sendForm(){
                var form = document.getElementById("form");
                console.log( form )

                var result = form.checkValidity();
                if (!result){
                    form.reportValidity();
                    return false
                }
                console.log(result);

            axios({
                method: "post",
                url: "http://localhost:8080/login1",
                data: {
                    id: form.id.value,
                    pw: form.pw.value
                }
            }).then((a) => { return a.data; })
            .then((d) => {
                document.getElementById("fail").innerHTML = d.message;
            });
        }    
        </script>
    </head>
    <body>
        <form method="post" id="form">
            <input type="text" name="id" placeholder="ID" required><br><br>
            <input type="text" name="pw" placeholder="PW" required><br><br>
            <div style="color: red;" id="fail"></div>
            <button type="button" onclick="sendForm()">LOGIN</button>
        </form>
    </body>
</html>